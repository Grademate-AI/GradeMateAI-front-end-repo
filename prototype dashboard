  <script>
    // ======= Demo data & small 'backend' emulation =======
    const needs = [
      {id:1,title:'Help buy malaria meds',desc:'Local clinic, urgent',status:'open'},
      {id:2,title:'Transport to clinic',desc:'Elderly patient, 2km',status:'open'},
      {id:3,title:'Feed for family',desc:'Food supplies needed',status:'open'}
    ];

    // Simple state
    let wallet = null;
    let tokenCount = 0;
    let tasksDone = 0;
    let lastProof = null;

    const needsList = document.getElementById('needsList');
    const walletBtn = document.getElementById('walletBtn');
    const walletAddr = document.getElementById('walletAddr');
    const simBtn = document.getElementById('simBtn');
    const activity = document.getElementById('activity');
    const tokenCountEl = document.getElementById('tokenCount');
    const tasksDoneEl = document.getElementById('tasksDone');
    const postNeedBtn = document.getElementById('postNeed');
    const needTitle = document.getElementById('needTitle');
    const needDesc = document.getElementById('needDesc');
    const approveBtn = document.getElementById('approveBtn');

    function renderNeeds(){
      needsList.innerHTML = '';
      needs.filter(n=>n.status!=='done').forEach(n=>{
        const el = document.createElement('div'); el.className='need';
        el.innerHTML = `<div style="max-width:70%"><h4>${escapeHTML(n.title)}</h4><p>${escapeHTML(n.desc)}</p></div>
                        <div style="display:flex;flex-direction:column;gap:8px;align-items:flex-end">
                          <div class="small muted">${n.status}</div>
                          <button class="cta" onclick="acceptTask(${n.id})">Accept</button>
                        </div>`;
        needsList.appendChild(el);
      })
    }

    function escapeHTML(s){ return (s||'').replace(/[&<>"']/g, c=>({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":"&#39;"})[c]); }

    window.acceptTask = function(id){
      if(!wallet){ alert('Connect wallet first (demo)'); return; }
      const task = needs.find(x=>x.id===id);
      if(!task) return;
      task.status='in-progress';
      renderNeeds();
      activity.innerHTML = `Volunteer <strong>${wallet}</strong> accepted "${escapeHTML(task.title)}"`;

      // Simulate upload of proof after 2s
      setTimeout(()=>{
        lastProof = {taskId:task.id,volunteer:wallet,proof:'photo_abc.jpg',note:'Bought meds and delivered'};
        activity.innerHTML += `<br><span style="color:#9AE6B4">Proof uploaded — awaiting moderation</span>`;
      },1500);
    }

    walletBtn.addEventListener('click',()=>{
      // demo wallet connect (NOT real web3 integration) — replace with MetaMask/Phantom logic later
      if(!wallet){
        wallet = '0x' + Math.random().toString(16).slice(2,10);
        walletAddr.textContent = wallet;
        walletBtn.textContent = 'Disconnect';
      } else { wallet = null; walletAddr.textContent='Not connected'; walletBtn.textContent='Connect Wallet'; }
    })

    simBtn.addEventListener('click',()=>{
      // Simulate full flow: post -> accept -> proof -> moderator approves -> mint
      if(!wallet){ alert('Connect wallet first (demo)'); return; }
      // Post a demo need
      const demo = {id:Date.now(),title:'Demo: Buy meds',desc:'Urgent demo need',status:'open'};
      needs.unshift(demo); renderNeeds(); activity.innerHTML = 'Demo need posted.';

      // Accept after 1s
      setTimeout(()=>{ acceptTask(demo.id); },900);

      // Moderator approves and mints after 4s
      setTimeout(()=>{ if(lastProof && lastProof.taskId===demo.id){ approveProof(); } else { activity.innerHTML += '<br><span class="muted">No proof found to approve</span>'; } },4200);
    })

    approveBtn.addEventListener('click',()=>{ approveProof(); });

    function approveProof(){
      if(!lastProof){ alert('No proof to approve'); return; }
      // Mark task done
      const t = needs.find(x=>x.id===lastProof.taskId);
      if(t) t.status='done';
      renderNeeds();

      // Mint tokens (demo only) — in real app this triggers backend -> smart contract
      const minted = Math.floor(Math.random()*40)+10;
      tokenCount += minted; tasksDone += 1;
      tokenCountEl.textContent = tokenCount; tasksDoneEl.textContent = tasksDone;

      activity.innerHTML += `<br><span style="color:#9AE6B4">Moderator approved — minted ${minted} RQ to ${lastProof.volunteer}</span>`;
      activity.innerHTML += `<br>Tx: 0x${Math.random().toString(16).slice(2,12)}`;

      // reset lastProof
      lastProof = null;
    }

    postNeedBtn.addEventListener('click',()=>{
      const t = needTitle.value.trim(); const d = needDesc.value.trim();
      if(!t){ alert('Add a title'); return; }
      needs.unshift({id:Date.now(),title:t,desc:d||'No description',status:'open'});
      needTitle.value=''; needDesc.value=''; renderNeeds();
      activity.innerHTML = `Need posted: "${escapeHTML(t)}"`;
    })

    // small helpers
    document.getElementById('viewChain').addEventListener('click',()=>{
      alert('Opens block explorer (demo) — replace with actual tx link in production');
    })

    // initial render
    renderNeeds();

  </script>
</body>
</html>
